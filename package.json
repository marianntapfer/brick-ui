{
  "name": "brick-ui",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "./dist/brick-ui.umd.js",
  "module": "./dist/brick-ui.es.js",
  "types": "./dist/index.d.ts",
  "files": [
    "./dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "size": "size-limit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "build-sb": "npm run build && npm run build-storybook",
    "test-storybook": "test-storybook",
    "serve-test": "npx concurrently -k -s first -n 'SB,TEST' -c 'magenta,blue' 'npx http-server storybook-static --port 6006 --silent' 'npx wait-on tcp:6006 && npm run test-storybook'",
    "cov": "npx nyc report --reporter=lcov -t coverage/storybook --report-dir coverage/storybook",
    "coverage": "npm run test-storybook -- --coverage"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.1.2",
    "@storybook/addon-a11y": "^7.0.0-beta.36",
    "@storybook/addon-coverage": "^0.0.7",
    "@storybook/addon-essentials": "^7.0.0-beta.35",
    "@storybook/addon-interactions": "^7.0.0-beta.35",
    "@storybook/addon-links": "^7.0.0-beta.35",
    "@storybook/addons": "^7.0.0-beta.35",
    "@storybook/jest": "^0.0.10",
    "@storybook/react": "^7.0.0-beta.35",
    "@storybook/react-vite": "^7.0.0-beta.35",
    "@storybook/test-runner": "^0.10.0-next.5",
    "@storybook/testing-library": "^0.0.13",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@vitejs/plugin-react-swc": "^3.0.0",
    "axe-playwright": "^1.1.12",
    "jest-image-snapshot": "^6.1.0",
    "storybook": "^7.0.0-beta.35",
    "storybook-a11y-report": "^0.0.19",
    "typescript": "^4.9.3",
    "vite": "^4.0.0",
    "vite-plugin-dts": "^1.7.1"
  },
  "size-limit": [
    {
      "name": "umd",
      "path": "dist/brick-ui.umd.js",
      "limit": "9kB"
    },
    {
      "name": "esm",
      "path": "dist/brick-ui.es.js",
      "limit": "9kB"
    },
    {
      "name": "css",
      "path": "dist/style.css",
      "limit": "9kB"
    }
  ]
}
